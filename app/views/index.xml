<Alloy>
	<Window class="win">
		
		<ListView id="lv" class="lv" defaultItemTemplate="template" onItemclick="lvClick">
            <Templates>
                <ItemTemplate name="template" class="li-1l">
                    <Label bindId="title" class="li-1l-title"/>
                </ItemTemplate>
            </Templates>
            
            <ListSection>
                <ListItem itemId="list" title:text="list"/>
            </ListSection>
            
            <HeaderView><View class="lv-hv"/></HeaderView>
            <FooterView><View class="lv-fv"/></FooterView>
        </ListView>

	</Window>
</Alloy>