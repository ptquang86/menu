<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<!-- theme: material default -->
    <style name="MaterialTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    	<item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <!-- date time picker theme -->
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
        <!-- search view theme -->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>
    <!-- theme: date time picker theme -->
    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    	<item name="colorAccent">#04BBEF</item>
	    <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
	</style>
	<style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
	    <item name="android:headerBackground">#E50000</item>
	</style>
	<style name="MyTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#04BBEF</item>
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>
    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">#E50000</item>
    </style>
    <!-- theme: search view theme -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
	    <item name="queryBackground">@null</item>
	    <item name="searchIcon">@null</item>
	</style>
    
    <!-- 
    	theme: material theme for Ti.DrawerLayout 
    	theme name ThemeOverlay.AppCompat.Dark.ActionBar
    	is used in Ti.DrawerLayout/android/platform/android/res/layout/drawer_main.xml 
    	(https://github.com/manumaticx/Ti.DrawerLayout)
		do not change!
    -->
    <!-- button menu for action-bar dark -->
	<style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="@style/Theme.AppCompat.NoActionBar">
		<item name="android:textAllCaps">false</item>
		<item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- button menu for action-bar light 
    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
		<item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    -->
    
    <!-- theme: transparent action-bar dark -->
	<style name="TransparentActionBarDark" parent="@style/Theme.AppCompat">
		<item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
		<item name="actionMenuTextColor">@color/textColorPrimaryDark</item>
		<item name="android:actionBarTheme">@style/ActionBarThemeDark</item>
		<item name="android:actionBarStyle">@style/ActionBarStyleDark</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="actionBarTheme">@style/ActionBarThemeDark</item>
		<item name="actionBarStyle">@style/ActionBarStyleDark</item>
		<item name="windowActionBarOverlay">true</item>
	</style>
	<style name="ActionBarThemeDark" parent="@style/ThemeOverlay.AppCompat.ActionBar">       
	    <item name="colorControlNormal">@color/textColorPrimaryDark</item>
	</style>
	<style name="ActionBarStyleDark" parent="@style/Widget.AppCompat.Light.ActionBar">
	    <item name="elevation">0dp</item>      
	    <item name="titleTextStyle">@style/TitleTextStyleDark</item>
	    <item name="subtitleTextStyle">@style/SubtitleTextStyleDark</item>
	</style>
	<style name="TitleTextStyleDark" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
	    <item name="android:textColor">@color/textColorPrimaryDark</item>
	</style>
	<style name="SubtitleTextStyleDark" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
	    <item name="android:textColor">@color/textColorPrimaryDark</item>
	</style>
	
	<!-- theme: transparent action-bar light -->
	<style name="TransparentActionBarLight" parent="@style/Theme.AppCompat">
		<item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
		<item name="actionMenuTextColor">@color/textColorPrimaryLight</item>
		<item name="android:actionBarTheme">@style/ActionBarThemeLight</item>
		<item name="android:actionBarStyle">@style/ActionBarStyleLight</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="actionBarTheme">@style/ActionBarThemeLight</item>
		<item name="actionBarStyle">@style/ActionBarStyleLight</item>
		<item name="windowActionBarOverlay">true</item>
	</style>
	<style name="ActionBarThemeLight" parent="@style/ThemeOverlay.AppCompat.ActionBar">       
	    <item name="colorControlNormal">@color/textColorPrimaryLight</item>
	</style>
	<style name="ActionBarStyleLight" parent="@style/Widget.AppCompat.Light.ActionBar">
	    <item name="elevation">0dp</item>      
	    <item name="titleTextStyle">@style/TitleTextStyleLight</item>
	    <item name="subtitleTextStyle">@style/SubtitleTextStyleLight</item>
	</style>
	<style name="TitleTextStyleLight" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
	    <item name="android:textColor">@color/textColorPrimaryLight</item>
	</style>
	<style name="SubtitleTextStyleLight" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
	    <item name="android:textColor">@color/textColorPrimaryLight</item>
	</style>
	
</resources>